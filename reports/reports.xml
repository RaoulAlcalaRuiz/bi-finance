<odoo>
    <report
        id="ca_report"
        model="bi_finance.yearly_goal"
        string="Goal Year Report"
        name="bi_finance.report_ca_template"
        file="bi_finance.report_ca_template"
        report_type="qweb-html"
        menu="True" />

    <template id="report_ca_template">
        <div id="header"></div>
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <head>
                    <link href="/bi_finance/static/css/report.css" rel="stylesheet"/>
                </head>
                <body>
                    <header>
                        <div class="d-flex justify-content-center">
                            <img src="\bi_finance\static\src\img\logo module.png" alt="logo aide décisionnelle" class="logo_report"/>
                        </div>
                        <h2 class="text-center">Année <t t-esc="year"/></h2>
                        <ul class="nav justify-content-center mt-3 mb-5">
                            <li class="nav-item">
                                <button type="button" class="btn btn-primary">Chiffre d'affaires</button>
                                <button type="button" class="btn btn-outline-primary">Satisfaction client</button>
                                <button type="button" class="btn btn-outline-primary">Valeur du stock</button>
                                <button type="button" class="btn btn-outline-primary">EBITDA</button>
                            </li>
                        </ul>
                    </header>
                    <!--===========Annual Sales===========-->
                    <main id="annual_sales">
                        <div id="container" style="width:800px; height:600px; margin:auto auto;"></div>
                    </main>
                    <footer>
                    </footer>
                </body>

                <!--=======JSON DATA=======-->
                <div>
                    <div id="goal" style="visibility:hidden">
                            [
                            <t t-foreach="goal_annual_sales" t-as="sale">
                                <t t-if="len(sale) != 0">
                                    <t t-esc="sale[0][0]"/>
                                </t>
                                <t t-else="">
                                    null
                                </t>
                                ,
                            </t>
                            ]
                    </div>

                    <div id="real" style="visibility:hidden">
                        [
                        <t t-foreach="real_annual_sales" t-as="sale">
                            <t t-if="len(sale) != 0">
                                <t t-esc="sale[0][0]"/>
                            </t>
                            <t t-else="">
                                null
                            </t>
                            ,
                        </t>
                        ]
                    </div>
                </div>

                <!--========ALL import JS sources=======-->
                <script src="https://code.highcharts.com/highcharts.js"></script>
                <script type="text/javascript" src="/bi_finance/static/js/annualSales.js"/>
                <!--                 <script type="text/javascript" src="/bi_finance/static/js/header.js"/>-->
            </t>
        </t>
    </template>

</odoo>
